<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/saved_instance_item_view"
        android:background="@color/basicBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_app_name"
            android:text="appName"
            android:textColor="@color/basicTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_fee_per_min"
            android:text="FPM"
            android:textColor="@color/basicTextColor"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_divider"
            android:layout_marginRight="5dp"
            android:text="|"
            android:textSize="16sp"
            android:textColor="@color/basicTextColor"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_fee_per_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_base_fee"
            android:layout_marginRight="5dp"
            android:text="BF"
            android:textSize="16sp"
            android:textColor="@color/basicTextColor"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>