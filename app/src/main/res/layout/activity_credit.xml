<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicBackgroundColor"
    tools:context=".CreditActivity">

    <ScrollView
        android:id="@+id/sv_credit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ibtn_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:autoLink="all"
                android:gravity="center"
                android:text="@string/credits_value"
                android:textColor="@color/basicTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/llama" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autoLink="all"
                android:gravity="center_horizontal"
                android:text="@string/llama_icon_value"
                android:textColor="@color/basicTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/floating_button_layout"
        android:elevation="8dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/basicButtonBackgroundColor" />

</RelativeLayout>